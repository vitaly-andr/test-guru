<%= form_with model: (@answer.new_record? ? [@answer.question, @answer] : @answer) do |form| %>
  <h1><%= form_header(@answer) %> for question "<%= @answer.question.body %>"</h1>

  <%= render 'shared/errors', resource: @answer %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
