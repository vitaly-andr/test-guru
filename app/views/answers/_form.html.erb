<%= form_with model: (@answer.new_record? ? [@question, @answer] : @answer) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
