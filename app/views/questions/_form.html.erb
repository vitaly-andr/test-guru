<%= form_with model: [@test, @question] do |form| %>
  <h1><%= form_header(@question) %> for test "<%= @question.test.title %>"</h1>
  <%= render 'shared/errors', resource: @question %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
