<%= form_with model: (@question.new_record? ? [@question.test, @question] : @question) do |form| %>
  <h1><%= form_header(@question) %> for test "<%= @question.test.title %>"</h1>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <%= render 'shared/errors', resource: @question %>
<% end %>
