<tr class="<%= row_class %>">
  <td><%= user.email %></td>
  <td><%= user.admin? ? 'Yes' : 'No' %></td>
  <td>
    <%= link_to t('shared.actions.edit'), edit_admin_user_path(user), class: "btn btn-secondary" %>
    <%= link_to t('shared.actions.delete'), admin_user_path(user), method: :delete, data: { confirm: t('shared.actions.confirm_delete') }, class: "btn btn-danger" %>
  </td>
</tr>
