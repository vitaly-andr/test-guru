<%= turbo_frame_tag dom_id(badge) do %>
  <div class="row align-items-center">
    <div class="col p-2">
      <%= link_to badge.title, admin_badge_path(badge), data: { turbo_frame: "_top" } %>
      <p class="text-muted mt-1"><%= badge.description %></p>
    </div>
    <div class="col p-2">
      <% if badge.image.attached? %>
        <%= image_tag badge.image, alt: badge.title, class: 'img-thumbnail w-25' %>
      <% else %>
        <span class="text-muted">No Image</span>
      <% end %>
    </div>
    <div class="col p-2"><%= badge.rule.humanize %></div>
    <div class="col p-2"><%= badge.rule_value %></div>
    <div class="col p-2">
      <%= link_to t('shared.actions.edit'), edit_admin_badge_path(badge), class: 'btn btn-sm btn-outline-secondary' %>
      <%= link_to t('shared.actions.delete'), admin_badge_path(badge), method: :delete, data: { turbo_confirm: t('shared.actions.confirm_delete'), turbo_frame: "_top" }, class: 'btn btn-sm btn-outline-danger' %>
    </div>
  </div>
<% end %>
