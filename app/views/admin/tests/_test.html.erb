<%= turbo_frame_tag dom_id(test) do %>
  <div class="row">
    <div class="col p-2 align-middle">
      <%= link_to test.title, admin_test_path(test), data: { turbo_frame: "_top" } %>
    </div>
    <div class="col p-2"><%= test_level(test) %></div>
    <div class="col p-2"><%= test.questions.count %></div>
    <div class="col p-2"><%= test.author.full_name %></div>
    <div class="col p-2">
      <%= link_to t('shared.actions.edit'), edit_admin_test_path(test), class: 'btn btn-sm btn-outline-secondary' %>
      <%= link_to t('shared.actions.delete'), admin_test_path(test), data: { turbo_method: :delete, turbo_confirm: t('shared.actions.confirm_delete'), turbo_frame: "_top"  }, class: 'btn btn-sm btn-outline-danger' %>
    </div>
  </div>
<% end %>


