<% if resource.present? && resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= t('shared.errors.header', count: resource.errors.count, resource: resource.class.model_name.human.downcase) %></h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
